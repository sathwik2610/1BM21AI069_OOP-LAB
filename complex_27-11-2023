class Complex:
    def __init__(self,real=0,imaginary=0):
        self.r=real
        self.i=imaginary
    def display(self):
        print(self.r,"+",self.i,"i")
    def add(self,c1,c2):
        self.r=c1.r+c2.r
        self.i=c1.i+c2.i

if __name__=='__main__':
    c1=Complex(3,6)
    c2=Complex(6,3)
    c1.display()
    c2.display()
    c3=Complex()
    c3.add(c1,c2)
    c3.display()
